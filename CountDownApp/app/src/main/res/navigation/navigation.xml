<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/startFragment">

    <fragment
        android:id="@+id/startFragment"
        android:name="com.example.countdownapp.StartFragment"
        android:label="fragment_start"
        tools:layout="@layout/fragment_start" >
        <action
            android:id="@+id/action_startFragment_to_countTimeFragment"
            app:destination="@id/countTimeFragment" />
    </fragment>
    <fragment
        android:id="@+id/countTimeFragment"
        android:name="com.example.countdownapp.CountTimeFragment"
        android:label="fragment_count_time"
        tools:layout="@layout/fragment_count_time" />
</navigation>